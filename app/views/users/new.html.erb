<% provide(:title, 'Sign up') %>
<section class="push-down">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="session_header">Sign up</h1>
            <p class="session_info">Thank you for taking the time to sign up for our wedding site. After signing up make sure to RSVP. Also check out our blog posts and feel free to comment. We'd love to hear from you.</p>
                <div class="signup">
                <%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
                  <%= render 'fields', f: f %>
                  <%= f.button :submit, "Create my account", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
      </div>
    </div>
</section>