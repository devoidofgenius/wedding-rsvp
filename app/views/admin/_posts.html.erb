<% @posts.each do |post| %>
    <tr>
        <td><%= link_to post.title, post %></td>
        <td class="hidden-xs"><%= post.created_at.strftime("%B, %d, %Y") %></td>
        <td class="text-center hidden-xs"><%= link_to full_name(post.user), post.user %></td>
        <td class="text-center hidden-xs"><span class="badge"><%= post.comments.count %></span></td>
        <td class="text-center"><%= link_to "EDIT", edit_post_path(post) %> | 
        <%= link_to "DELETE", post, method: :delete,
                                    data: { confirm: "You sure?" } %></td>
    </tr>
<% end %>