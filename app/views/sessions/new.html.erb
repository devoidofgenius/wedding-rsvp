<% provide(:title, "Log in") %>
<section class="push-down">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="session_header">Sign In</h1>
        <%= simple_form_for(:session, url: login_path) do |f| %>

          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.label :password %>
          <%= link_to "(forgot password)", new_password_reset_path %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.label :remember_me, class: "checkbox inline remember" do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
          <% end %>

          <%= f.submit "Log in", class: "btn btn-primary" %>
        <% end %>

        <p class="new_user">New user? <%= link_to "Sign up now!", signup_path %></p>
      </div>
    </div>
  </div>
</section>