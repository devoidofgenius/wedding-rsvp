<div class="comment">
    <div class="comment-content">
        <p class="comment-name"><%= full_name(comment.user) %></p>
        <p class="comment-body"><%= comment.body %></p>
        <p class="comment-time">
            <%= time_ago_in_words(comment.created_at) %> Ago 
            <% if logged_in? && current_user?(comment.user) || logged_in? && current_user.admin? %>
                | <%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button", data: { confirm: "Are you sure?" } %>
            <% end %>
            <hr>
        </p>
    </div>



</div>